<% title "Waters" %>

<table class="index-table">
  	<tr>
	  	<th>Waters</th>
		<th></th>
	</tr>
	<% for water in @waters %>
	<tr>
	    <td><%= water.name %></td>
	    <td>
			<%= link_to view_ico, water %>
	    	<%= link_to edit_ico, edit_water_path(water) %>
	    	<%= link_to delete_ico, water, :confirm => 'Are you sure?', :method => :delete %>
		</td>
	</tr>
	<% end %>
</table>

<div class="pagination">
	<div class="page_info">
    	<%= page_entries_info @waters %>
    </div>
    <%= will_paginate @waters, :container => false %>
</div>

<%= render 'panel_dataentry' %>


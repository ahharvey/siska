<% title "Gears" %>

<table id="" class="index-table">
  	<tr>
	  	<th>Gear</th>
		<th>Category</th>
		<th></th>
	</tr>
	<% for gear in @gears %>
	<tr>
		<td><%= gear.name %></td>
	    <td><%= link_to gear.gear_category.name, gear.gear_category%></td>
	    <td>
			<%= link_to view_ico, gear %>
	    	<%= link_to edit_ico, edit_gear_path(gear) %>
	    	<%= link_to delete_ico, gear, :confirm => 'Are you sure?', :method => :delete %>
		</td>
	</tr>
	<% end %>
</table>

<div class="pagination">
	<div class="page_info">
    	<%= page_entries_info @boat_sizes %>
    </div>
    <%= will_paginate @boat_sizes, :container => false %>
</div>

<%= render 'panel_dataentry' %>

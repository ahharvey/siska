<% title "Offices" %>

<table class="index-table">
	<tr>
	   <th>Office Name</th>
	   <th>Address</th>
	   <th>Sub-District</th>
	   <th></th>
	</tr>
	<% for office in @offices %>
	<tr>
		<td><%= office.name %></td>
	    <td>
			<%= office.address1 %>, 
			<%= office.address2 %>, 
			<%= office.address3 %>
		</td>
	    <td><%= office.sdistrict %></td>
	    <td>
			<%= link_to view_ico, office %>
	    	<%= link_to edit_ico, edit_office_path(office) %>
	    	<%= link_to delete_ico, office, :confirm => 'Are you sure?', :method => :delete %>
		</td>
	 </tr>
	 <% end %>
</table>

<div class="pagination">
	<div class="page_info">
    	<%= page_entries_info @offices %>
    </div>
    <%= will_paginate @offices, :container => false %>
</div>

<%= render 'panel_dataentry' %>

<p><%= link_to new_ico, new_office_path %></p>

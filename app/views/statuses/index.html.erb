<% title "Statuses" %>

<table class="index-table">
  	<tr>
	 	<th>Status</th>
		<th></th>
	</tr>
	<% for status in @statuses %>
	<tr>
	    <td><%= status.name %></td>
	    <td>
			<%= link_to view_ico, status %>
	    	<%= link_to edit_ico, edit_status_path(status) %>
	    	<%= link_to delete_ico, status, :confirm => 'Are you sure?', :method => :delete %>
		</td>
	</tr>
	<% end %>
</table>

<div class="pagination">
	<div class="page_info">
    	<%= page_entries_info @statuses %>
    </div>
    <%= will_paginate @statuses, :container => false %>
</div>

<%= render 'panel_dataentry' %>


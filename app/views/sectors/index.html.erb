<% title "Sectors" %>

<table class="index-table">
  	<tr>
		<th>Sector</th>
		<th></th>
	 </tr>
	 <% for sector in @sectors %>
	 <tr>
	 	<td><%= sector.name %></td>
	    <td>
			<%= link_to view_ico, sector %>
	    	<%= link_to edit_ico, edit_sector_path(sector) %>
	    	<%= link_to delete_ico, sector, :confirm => 'Are you sure?', :method => :delete %>
		</td>
	 </tr>
	 <% end %>
</table>

<div class="pagination">
	<div class="page_info">
    	<%= page_entries_info @sectors %>
    </div>
    <%= will_paginate @sectors, :container => false %>
</div>

<%= render 'panel_dataentry' %>

<p><%= link_to new_ico, new_sector_path %></p>

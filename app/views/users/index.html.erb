<% title "Users" %>

<table class="index-table">
  <tr>
    <th>Family Name</th>
	<th>First Name</th>
    <th>Position</th>
    <th>Office</th>
    <th>Role</th>
	<th></th>
  </tr>
  <% for user in @users %>
    <tr>
      	<td><%= user.lname %></td>
		<td><%= user.fname %></td>
      	<td><%= user.position %></td>
      	<td><%= user.office %></td>
      	<td></td>
      	<td>
			<%= link_to view_ico, user %>
      		<%= link_to edit_ico, edit_user_path(user) %>
      		<%= link_to delete_ico, user, :confirm => 'Are you sure?', :method => :delete %>
		</td>
    </tr>
  <% end %>
</table>

<p><%= link_to new_ico, new_user_path %></p>
